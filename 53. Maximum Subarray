/*
 * 这道题的要求是寻找连续和最大的子字符串 (Easy)
 * 使用了Kadane's Algorithm, 和LC121. Best Time to Buy and Sell Stock相似
 * 53: https://leetcode.com/problems/maximum-subarray/
 * 121: https://leetcode.com/problems/best-time-to-buy-and-sell-stock/
 */

class Solution53{
  public int maxSubArray(int[] nums) {
    int max_here = Integer.MIN_VALUE, max_sofar = nums[0];
    for (int num : nums ) {
      max_here = Math.max(max_here + num, num);
      max_sofar = Math.max(max_here, max_sofar);
    }
    return max_sofar;
  }	
}
